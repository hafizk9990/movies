<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/css/magnific-popup.css">
    <link rel="stylesheet" href="/css/jquery.mCustomScrollbar.min.css">
    <link rel="stylesheet" href="/css/select2.min.css">
    <link rel="stylesheet" href="/css/ionicons.min.css">
    <link rel="stylesheet" href="/css/admin.css">
    <!-- Favicons -->
    <link rel="icon" type="image/png" href="icon/favicon-32x32.png" sizes="32x32">
    <link rel="apple-touch-icon" href="icon/favicon-32x32.png">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="Dmitry Volkov">
    <title> View All Reviews </title>
</head>
<body>
    <!-- main content -->
    <main class="main">
        <div class="container-fluid">
            <div class="row">
                <!-- main title -->
                <div class="col-12">
                    <div class="main__title">
                        <h2> View All Movie Reviews </h2>
                        <div style = "font-size: 23px; color: green; margin-left: 5%; margin-top: 1%;">
                            {{ reviewDeletionSuccessful }}
                        </div>
                    </div>
                </div>
                <!-- end main title -->
                <!-- reviews -->
                <div class="col-12">
                    <div class="main__table-wrap">
                        <table class="main__table">
                            <thead>
                                <tr>
                                    <th> Reviewed Movie </th>
                                    <th> Review ID </th>
                                    <th> Author </th>
                                    <th> Rating Given </th>
                                    <th> Like / Dislike </th>
                                    <th> Date Reviewed </th>
                                    <th> Actions </th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each movies as |everyMovie|}}
                                    {{#each everyMovie.reviews}}
                                        <tr>
                                            <td>
                                                <div class="main__table-text"> {{ everyMovie.name }} </div>
                                            </td>
                                            <td>
                                                <div class="main__table-text"> {{ _id }} </div>
                                            </td>
                                            <td>
                                                <div class="main__table-text"> {{ reviewAuthor }} </div>
                                            </td>
                                            <td>
                                                <div class="main__table-text main__table-text--rate"><i class="icon ion-ios-star"></i> {{ reviewRating }} </div>
                                            </td>
                                            <td>
                                                <div class="main__table-text"> {{ reviewLiked }} / {{ reviewDisliked }} </div>
                                            </td>
                                            <td>
                                                <div class="main__table-text"> {{ reviewDateCreated }} |  {{ reviewTimeCreated }} </div>
                                            </td>
                                            <td>
                                                <div class="main__table-btns">
                                                    <a href="#modal-view-{{_id}}" class="main__table-btn main__table-btn--view open-modal">
                                                        <i class="icon ion-ios-eye"></i>
                                                    </a>
                                                    <a href="#modal-delete-{{everyMovie._id}}-{{_id}}" class="main__table-btn main__table-btn--delete open-modal">
                                                        <i class="icon ion-ios-trash"></i>
                                                    </a>
                                                </div>
                                                <!-- modal view -->
                                                <div id="modal-view-{{_id}}" class="zoom-anim-dialog mfp-hide modal modal--view">
                                                    <div class="reviews__autor">
                                                        <img class="reviews__avatar" src="/img/user.svg" alt="">
                                                        <span class="reviews__name"> {{ reviewTitle }} </span>
                                                        <span class="reviews__time"> {{ reviewDateCreated }} |  {{ reviewTimeCreated }} </span>

                                                        <span class="reviews__rating"><i class="icon ion-ios-star"></i> {{ reviewRating }} </span>
                                                    </div>
                                                    <p class="reviews__text"> {{ reviewContent }} </p>
                                                </div>
                                                <!-- end modal view -->
                                                <!-- modal delete -->
                                                <div id="modal-delete-{{everyMovie._id}}-{{_id}}" class="zoom-anim-dialog mfp-hide modal">
                                                    <h6 class="modal__title"> Delete Review? </h6>
                                                    <p class="modal__text"> Are you sure you want to permanently delete this review? </p>
                                                    <div class="modal__btns">
                                                        <a href = "/admin/view-reviews/delete/{{everyMovie._id}}*{{_id}}?_method=DELETE" class="modal__btn modal__btn--apply" type = "button"> Delete </a>
                                                        <button class="modal__btn modal__btn--dismiss" type="button"> Cancel </button>
                                                    </div>
                                                </div>
                                                <!-- end modal delete -->
                                            </td>
                                        </tr>
                                    {{/each}}
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- end reviews -->
            </div>
        </div>
    </main>
    <!-- end main content -->
    <!-- JS -->
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/jquery.mousewheel.min.js"></script>
    <script src="/js/jquery.mCustomScrollbar.min.js"></script>
    <script src="js/select2.min.js"></script>
    <script src="/js/admin.js"></script>
</body>

</html>