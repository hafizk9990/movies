<!-- home -->
<section class="home">
    <!-- home bg -->
    <div class="owl-carousel home__bg">
        <div class="item home__cover" data-bg="img/home/home__bg.jpg"></div>
        <div class="item home__cover" data-bg="img/home/home__bg2.jpg"></div>
        <div class="item home__cover" data-bg="img/home/home__bg3.jpg"></div>
        <div class="item home__cover" data-bg="img/home/home__bg4.jpg"></div>
    </div>
    <!-- end home bg -->
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div style = "color: green; font-size: 24px;">
                    {{ movieRequestAddedSuccessfully }}
                </div>  
                <div style = "color: red; font-size: 24px;">
                    {{ requestedMovieRepeatedely }}
                </div>  
                <h1 class="home__title"><b> Top Favourite Movies </b> <span style = "font-size: 25px; color: pink">  </span> </h1>
                <button class="home__nav home__nav--prev" type="button">
                    <i class="icon ion-ios-arrow-round-back"></i>
                </button>
                <button class="home__nav home__nav--next" type="button">
                    <i class="icon ion-ios-arrow-round-forward"></i>
                </button>
            </div>
            <div class="col-12">
                <div class="owl-carousel home__carousel">
                    {{#each carouselData}}
                        <div class="item">
                            <div class="card card--big">
                                <div class="card__cover">
                                    <img src="/posters/{{poster}}" alt="">
                                    <a href="/home/movies/{{_id}}" class="card__play">
                                        <i class="icon ion-ios-play"></i>
                                    </a>
                                </div>
                                <div class="card__content">
                                    <h3 class="card__title"><a href="/home/movies/{{_id}}"> {{ name }} </a></h3>
                                    <span class="card__category">
                                        <a> {{#genreForMovieDetails genre}} {{/genreForMovieDetails}} </a>
                                    </span>
                                    <span class="card__rate"><i class="icon ion-ios-star"></i> {{#movieRating rating totalNumberOfRatings}} {{/movieRating}} </span>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end home -->
<!-- content -->
<section class="content">
    <div class="content__head">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- content title -->
                    <h2 class="content__title"> Movies by Genre </h2>
                    <!-- end content title -->
                    <!-- content tabs nav -->
                    <ul class="nav nav-tabs content__tabs" id = "content__tabs" role="tablist">
                        <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="false"> Latest Reviews </a> </li>
                        {{#each genresData as |genreObject arrayIndex|}}
                            {{#generateHomeGenreNamesDynamicallyforNonMobile genreObject arrayIndex}} {{/generateHomeGenreNamesDynamicallyforNonMobile}}
                        {{/each}}
                    </ul>
                    <!-- end content tabs nav -->
                    <!-- content mobile tabs nav -->
                    <div class="content__mobile-tabs" id="content__mobile-tabs">
                        <div class="content__mobile-tabs-btn dropdown-toggle" role="navigation" id="mobile-tabs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <input type="button" value="New items">
                            <span></span>
                        </div>
                        <div class="content__mobile-tabs-menu dropdown-menu" aria-labelledby="mobile-tabs">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item"> <a class="nav-link active" id="1-tab" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true"> Latest Reviews </a> </li>
                                {{#each genresData as |genreObject arrayIndex|}}
                                    {{#generateHomeGenreNamesDynamicallyforMobile genreObject arrayIndex}} {{/generateHomeGenreNamesDynamicallyforMobile}}
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                    <!-- end content mobile tabs nav -->
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <!-- content tabs -->
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="1-tab">
            
            {{!-- Latest reviews generated dynamically --}}
                <div class="row">
                    {{#generateHomeLatestReviews carouselData}} {{/generateHomeLatestReviews}}
                </div>
            </div>
            
            {{!-- All genre's data generated dynamically --}}
            {{#each genresData as |genreObject arrayIndex|}}
                {{#generateHomeMoviesDynamically arrayIndex genreObject}} {{/generateHomeMoviesDynamically}}
            {{/each}}
        </div>
        <!-- end content tabs -->
    </div>
</section>
<!-- end content -->